doctype html
html(ng-app='MainApp')
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
    

    nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid

        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') MeetApp Restful

        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/groups') Show Groups
            li
              a(href='/users') Show Users
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | APIs
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/api/users') Users API
                li.divider
                li
                  a(href='/api/groups') Groups API

          
          ul.nav.navbar-nav.navbar-right
            if(!user)
              li
                a(href='/login') Sign in
              li
                a(href='/register') Sign up
            if(user)
              li
                a(href='/users/me') Welcome #{user.firstname +" "+ user.lastname}
              li
                a(href='/logout') Log out
            


  br
  block content

  script(src='http://code.jquery.com/jquery.js')
  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
  script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
  // load jquery
  script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js")
  // load angular
  script(src='/js/core.js')
