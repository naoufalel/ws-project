extends layout

block content
  body(ng-controller='GroupCO')
     if(user) 
        .container
          h1 Update the group
          p.lead Say something worthwhile here.
          br
          form(style='max-width: 300px;')
            .form-group
                input.form-control(type='text', placeholder='Enter Group Name...', ng-model='group.gname')
            .form-group
              input.form-control(type='text', placeholder='Description...', ng-model='group.gdescription')
            button.btn.btn-default(type='submit', ng-click='updateGroup()') Update
            &nbsp;
            a(href='/groups')
              button.btn.btn-primary(type="button") Cancel
          br
          h4 You can create your group here !
    if(!user)
      p You need to login for this !!